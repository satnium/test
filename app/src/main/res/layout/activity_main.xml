<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/umeni_logo"
        android:layout_width="200dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toTopOf="@+id/details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/umeni" />

    <TextView
        android:id="@+id/details"
        android:layout_width="190dp"
        android:layout_height="36dp"
        android:text="We help you manage your money and track your savings"
        app:layout_constraintBottom_toTopOf="@+id/login_with_google"
        app:layout_constraintEnd_toEndOf="@+id/umeni_logo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/umeni_logo"
        app:layout_constraintTop_toBottomOf="@+id/umeni_logo" />


    <android.widget.Button
        android:id="@+id/login_with_google"
        android:layout_width="256.786dp"
        android:layout_height="53dp"
        android:background="@drawable/b1"
        android:text="Log in with Google"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/login_with_apple"
        app:layout_constraintEnd_toStartOf="@+id/google_LOGO"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details"
        app:layout_constraintVertical_bias="0.898"
        app:strokeColor="#1E1E1E" />

    <ImageView
        android:id="@+id/google_LOGO"
        android:layout_width="55dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_with_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/login_with_google"
        app:layout_constraintTop_toTopOf="@+id/login_with_google"
        app:srcCompat="@drawable/logo6" />

    <ImageView
        android:id="@+id/APPLE_LOGO"
        android:layout_width="55dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_with_apple"
        app:layout_constraintEnd_toStartOf="@+id/login_with_apple"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_with_apple"
        app:srcCompat="@drawable/logo3" />

    <android.widget.Button
        android:id="@+id/login_with_apple"
        android:layout_width="256.786dp"
        android:layout_height="53dp"

        android:background="@drawable/b1"
        android:text="Log in with Apple ID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/APPLE_LOGO"
        app:layout_constraintTop_toBottomOf="@+id/login_with_google"
        app:layout_constraintVertical_bias="1.0" />




</androidx.constraintlayout.widget.ConstraintLayout>